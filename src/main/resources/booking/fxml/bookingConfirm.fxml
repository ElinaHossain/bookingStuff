<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d6d6d6);">
    <children>
        <!-- Header -->
        <StackPane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: #c63434;">
            <children>
                <Label text="HOTEL NAME" textFill="white" textAlignment="CENTER">
                    <font>
                        <Font name="Impact" size="50.0" />
                    </font>
                </Label>
            </children>
        </StackPane>

        <!-- Back Button -->
        <Button layoutX="20.0" layoutY="20.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10;" text="&lt; BACK" />

        <!-- Booking Confirmation Details -->
        <VBox layoutX="50.0" layoutY="120.0" spacing="30.0" alignment="CENTER" prefWidth="500.0">
            <children>
                <Label text="Room Type: Suite" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" />
                <Label text="Price: $250" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" />
            </children>
        </VBox>

        <!-- Confirm Button -->
        <Button layoutX="230.0" layoutY="330.0" prefWidth="140.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10;" text="CONFIRM" />
    </children>
</AnchorPane>
