<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d6d6d6);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booking.controller.roomSelectionController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #c63434;">
         <children>
            <Button fx:id="backButton" onAction="#handleHomepage" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5 15;" text="&lt; Back" />
            <Label fx:id="hotelNameLabel" alignment="CENTER" text="Hotel Name" textFill="white">
               <font>
                  <Font name="Impact" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <!-- Room Options -->
      <VBox layoutX="17.0" layoutY="87.0" prefHeight="550.0" prefWidth="566.0" spacing="15.0">
         <children>
            <!-- Room 1 -->
            <VBox fx:id="roomVBox" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 10; -fx-cursor: hand;">
               <children>
                  <Label fx:id="roomLabel" style="-fx-font-size: 16; -fx-text-fill: #333;" text="Single Room" />
                  <Label fx:id="priceLabel" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Price: $100" />
                  <Label fx:id="capacityLabel" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Capacity: 2 people" />
                  <Label fx:id="descriptionLabel" style="-fx-font-size: 12; -fx-text-fill: #999; -fx-wrap-text: true;" text="A cozy single room with modern amenities." />
               </children>
            </VBox>

            <!-- Room 2 -->
            <VBox fx:id="room1VBox" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 10; -fx-cursor: hand;">
               <children>
                  <Label fx:id="roomLabel1" style="-fx-font-size: 16; -fx-text-fill: #333;" text="Double Room" />
                  <Label fx:id="priceLabel1" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Price: $150" />
                  <Label fx:id="capacityLabel1" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Capacity: 4 people" />
                  <Label fx:id="descriptionLabel1" style="-fx-font-size: 12; -fx-text-fill: #999; -fx-wrap-text: true;" text="Spacious room with two beds and modern amenities." />
               </children>
            </VBox>

            <!-- Room 3 -->
            <VBox fx:id="room2VBox" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 10; -fx-cursor: hand;">
               <children>
                  <Label fx:id="roomLabel2" style="-fx-font-size: 16; -fx-text-fill: #333;" text="Suite" />
                  <Label fx:id="priceLabel2" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Price: $250" />
                  <Label fx:id="capacityLabel2" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Capacity: 4 people" />
                  <Label fx:id="descriptionLabel2" style="-fx-font-size: 12; -fx-text-fill: #999; -fx-wrap-text: true;" text="Luxurious suite with separate living area and premium features." />
               </children>
            </VBox>

            <!-- Room 4 -->
            <VBox fx:id="room3VBox" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 10; -fx-cursor: hand;">
               <children>
                  <Label fx:id="roomLabel3" style="-fx-font-size: 16; -fx-text-fill: #333;" text="Deluxe Room" />
                  <Label fx:id="priceLabel3" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Price: $200" />
                  <Label fx:id="capacityLabel3" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Capacity: 3 people" />
                  <Label fx:id="descriptionLabel3" style="-fx-font-size: 12; -fx-text-fill: #999; -fx-wrap-text: true;" text="Elegant room with deluxe features and a comfortable stay." />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
